{
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": [
            "error",
            { "args": "none" }
        ],
        "no-console": [
            "error",
            { "allow": ["log", "warn", "error"] }
        ],
        "object-curly-spacing": [
            "error", 
            "always"
        ],
        "array-bracket-spacing": [
            "error", 
            "always"
        ]
    }
}
